{
  "extends": ["airbnb", "prettier"],
  "parser": "babel-eslint",
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": ["error"],
    "no-console": ["error", { "allow": ["error", "warn"] }],
    "allowForLoopAfterthoughts": true,
    "import/no-extraneous-dependencies": ["error", { "packageDir": "." }]
  },
  "env": {
    "browser": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": ["node_modules", "src/"]
      }
    }
  }
}
